#!/bin/bash

chunkc core::log_file stdout
chunkc core::log_level warn
chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins
chunkc core::hotload 0

# global settings
chunkc set global_desktop_mode           bsp
chunkc set global_desktop_offset_top     8
chunkc set global_desktop_offset_bottom  8
chunkc set global_desktop_offset_left    8 
chunkc set global_desktop_offset_right   8 
chunkc set global_desktop_offset_gap     8 

# second monitor
chunkc set 6_desktop_offset_top          10
chunkc set 6_desktop_offset_bottom       10
chunkc set 6_desktop_offset_left         10 
chunkc set 6_desktop_offset_right        10 
chunkc set 6_desktop_offset_gap          10 

chunkc set 7_desktop_offset_top          10
chunkc set 7_desktop_offset_bottom       10
chunkc set 7_desktop_offset_left         10 
chunkc set 7_desktop_offset_right        10 
chunkc set 7_desktop_offset_gap          10 

chunkc set 8_desktop_offset_top          10
chunkc set 8_desktop_offset_bottom       10
chunkc set 8_desktop_offset_left         10 
chunkc set 8_desktop_offset_right        10 
chunkc set 8_desktop_offset_gap          10 

chunkc set desktop_padding_step_size     1.0
chunkc set desktop_gap_step_size         1.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.5
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set monitor_focus_cycle           1
chunkc set window_focus_cycle            monitor

chunkc set mouse_follows_focus           intrinsic
chunkc set window_float_next             0
chunkc set window_region_locked          1
chunkc set window_float_center		     1

chunkc set mouse_motion_interval         35

chunkc set preselect_border_color        0x00ffffff
chunkc set preselect_border_width        0 
chunkc set preselect_border_outline      0

# chunkc set focused_border_color          0xff727272
chunkc set focused_border_color          0x00ffffff
chunkc set focused_border_width          0
chunkc set focused_border_radius         0
chunkc set focused_border_outline        0
chunkc set focused_border_skip_floating  0
chunkc set focused_border_skip_monocle   0

chunkc set ffm_bypass_modifier           fn
chunkc set ffm_standby_on_float          1
chunkc set ffm_disable_autoraise         0

chunkc core::load border.so
chunkc core::load tiling.so
chunkc core::load ffm.so

chunkc tiling::rule --owner Finder --state float &
chunkc tiling::rule --owner Spotify --state float &
chunkc tiling::rule --owner Python --state float &
chunkc tiling::rule --owner Reminders --state float &
chunkc tiling::rule --owner Mail --state float &
chunkc tiling::rule --owner Photos --state float &
chunkc tiling::rule --owner \"App Store\" --state float &
chunkc tiling::rule --owner Notes --state float &
chunkc tiling::rule --owner Grapher --state float &
chunkc tiling::rule --owner Books --state float &
chunkc tiling::rule --owner \"GIPHY CAPTURE\" --state float &
chunkc tiling::rule --owner Emacs --state tile

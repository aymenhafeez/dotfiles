    <IconPath>
        /usr/local/share/jwm
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="5" height="1">
        <Background type="command">feh --bg-scale ~/Pictures/Wallpapers/uV7sQyB.png</Background>
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode>opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode>opaque</ResizeMode>

    <!-- Key bindings -->
    <!-- mod4=cmd; mod1=alt -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="mod4+S" key="x">exec:i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png</Key>

    <!-- navigation -->
    <Key mask="mod4" key="h">prevstacked</Key>
    <Key mask="mod4" key="l">nextstacked</Key>

    <Key mask="mod4" key="r">resize</Key>
    <Key mask="mod1" key="m">move</Key>

    <Key mask="mod1" key="l">rdesktop</Key>
    <Key mask="mod1" key="h">ldesktop</Key>
    <Key mask="mod1" key="k">udesktop</Key>
    <Key mask="mod1" key="j">ddesktop</Key>
    <Key mask="mod1+S" key="h">sendl</Key>
    <Key mask="mod1+S" key="j">sendd</Key>
    <Key mask="mod1+S" key="k">sendu</Key>
    <Key mask="mod1+S" key="l">sendr</Key>

    <Key mask="mod4" key="Tab">nextstacked</Key>
    <Key mask="mod4+S" key="Tab">prevstacked</Key>
    <Key mask="mod4+S" key="q">close</Key>
    <Key mask="mod4+S" key="r">restart</Key>
    <Key mask="mod4" key="#">desktop#</Key>
    <Key mask="mod4" key="f">maximize</Key>
    <Key mask="mod4" key="m">minimize</Key>
    <Key mask="mod4+S" key="h">maxleft</Key>
    <Key mask="mod4+S" key="l">maxright</Key>
    <Key mask="mod4+S" key="k">maxtop</Key>
    <Key mask="mod4+S" key="j">maxbottom</Key>

    <!-- quick access to applications -->
    <Key mask="mod4" key="d">exec:rofi -show run</Key>
    <Key mask="mod1" key="d">root:1</Key>
    <Key mask="mod4" key="w">window</Key>
    <Key mask="mod4" key="p">root:2</Key>
    
    <!-- open applications -->
    <Key mask="mod4" key="Return">exec:urxvt</Key>
    <Key mask="mod4+C" key="n">exec:pcmanfm</Key>
    <Key mask="mod4+C" key="f">exec:firefox</Key>
    <Key mask="mod4+C" key="m">exec:spotify</Key>
    <Key mask="mod4+C" key="z">exec:zathura</Key>
    <Key mask="mod4+C" key="c">exec:galculator</Key>
    <Key mask="mod4+C" key="r">exec:urxvt -e ranger</Key>
    <Key mask="mod4+C" key="t">exec:urxvt -e htop</Key>
    <Key mask="mod4" key="p">exec:scrot -s -e 'mv $f ~/Documents/Screenshots/'</Key>
    <Key mask="mod4+S" key="p">exec:scrot -e 'mv $f ~/Documents/Screenshots/'</Key>

    <!-- kind of unnecassary but convenient sometimes -->
    <Key mask="mod1+C" key="r">exec:urxvt -e tmux attach -t REG || tmux new -s REG</Key>
    <Key mask="mod1+S" key="j">exec:urxvt -e vim ~/.jwmrc</Key>
    <Key mask="mod1+S" key="x">exec:urxvt -e vim ~/.Xresources</Key>
    <Key mask="mod1+S" key="r">exec:xrdb ~/.Xresources</Key>

    <!-- second monitor setup -->
    <Key mask="mod1+S" key="a">exec:xrandr --auto</Key>
    <Key mask="mod1+S" key="c">exec:xrandr --output HDMI-2 --right-of eDP-1</Key>

    <!-- media keys -->
    <Key key="XF86MonBrightnessUp">exec:light -A 5</Key>
    <Key key="XF86MonBrightnessDown">exec:light -U 5</Key>
    <Key key="XF86AudioPlay">exec:playerctl play-pause</Key>
    <Key key="XF86AudioNext">exec:playerctl next</Key>
    <Key key="XF86AudioPrev">exec:playerctl previous</Key>
    <Key key="XF86AudioRaiseVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ +2%</Key>
    <Key key="XF86AudioLowerVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ -2%</Key>
    <Key key="XF86AudioMute">exec:pactl set-sink-mute @DEFAULT_SINK@ toggle</Key>
    <Key key="XF86AudioMicMute">exec:pactl set-source-mute @DEFAULT_SOURCE@ toggle</Key>

</JWM>

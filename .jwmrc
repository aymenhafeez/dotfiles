<?xml version="1.0"?>
<JWM>

<!-- startup -->
<StartupCommand> volumeicon &amp;</StartupCommand>
<StartupCommand> nm-applet &amp;</StartupCommand>
<StartupCommand> fdpowermon &amp;</StartupCommand>
<StartupCommand> gkrellm &amp;</StartupCommand>
<StartupCommand> source ~/.screenlayout/monitor.sh &amp;</StartupCommand>

    <!-- The root menu. -->
    <RootMenu onroot="12">
        <!-- <Dynamic icon="folder-blue.svg" label="Recently used">exec: /home/aymen/Documents/scripts/recent_files.sh</Dynamic> -->
        <Program label="Run" icon="AppImageLauncher.svg"> ~/.config/rofi/launchers-git/launcher.sh </Program>
        <Separator/>
        <Include>$HOME/.jwmrc-mjwm</Include>
        <Program label="pcmanfm" icon="folder-blue.svg"> pcmanfm </Program>
        <Program label="Mail" icon="mutt.svg"> urxvtc -geometry 79x53+0+16 -e mutt </Program>
        <Program icon="urxvt" label="Terminal">urxvtc</Program>
        <Program icon="firefox.svg" label="Firefox">firefox</Program>
        <Program icon="opera.svg" label="Opera">opera</Program>
        <Separator/>
        <Program icon="changes-prevent.svg" label="Lock">
                i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png
        </Program>
        <Restart label="Restart" icon="ubuntu-logo-icon.svg"/>
        <Exit label="Logout" confirm="true" icon="tux.svg"/>
    </RootMenu>

    <RootMenu onroot="3">
        <!-- <Dynamic icon="folder-blue.svg" label="Recently used">exec: /home/aymen/Documents/scripts/recent_files.sh</Dynamic> -->
        <Program label="Run" icon="AppImageLauncher.svg"> ~/.config/rofi/launchers-git/launcher.sh </Program>
        <Separator/>
        <Include>$HOME/.jwmrc-mjwm</Include>
        <Program label="pcmanfm" icon="folder-blue.svg"> pcmanfm </Program>
        <Program label="Mail" icon="mutt.svg"> urxvtc -geometry 79x53+0+16 -e mutt </Program>
        <Program icon="urxvt" label="Terminal">urxvtc</Program>
        <Program icon="firefox.svg" label="Firefox">firefox</Program>
        <Program icon="opera.svg" label="Opera">opera</Program>
        <Separator/>
        <Program icon="changes-prevent.svg" label="Lock">
                i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png
        </Program>
        <Restart label="Restart" icon="ubuntu-logo-icon.svg"/>
        <Exit label="Logout" confirm="true" icon="tux.svg"/>
    </RootMenu>

    <!--     <Include>$HOME/.jwmrc</Include> -->

    <!-- Options for program groups. -->
    <Group>
        <Option>aerosnap</Option>
    </Group>
    <Group>
        <Class>URxvt</Class>
        <Option>iignore</Option>
        <Option>icon:/home/aymen/Documents/urxvt.png</Option>
    </Group>
    <Group>
        <Name>xterm</Name>
        <Option>iignore</Option>
    </Group>
    <Group>
        <Name>gkrellm</Name>
        <Option>sticky</Option>
        <Option>nopager</Option>
        <Option>nofocus</Option>
        <Option>nolist</Option>
        <Option>layer:below</Option>
        <Option>x:1326</Option>
        <Option>y:0</Option>
    </Group>
    <Group>
        <Name>xclock</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" height="25" autohide="off">
        <TrayButton icon="/usr/share/jwm/jwm-red.svg">root:1</TrayButton>
        <TrayButton label="_">showdesktop</TrayButton>
        <Pager labeled="false"/>

        <TaskList maxwidth="300"/>

        <!-- <TrayButton icon="firefox.svg">exec:firefox</TrayButton> -->
        <!-- <TrayButton icon="/home/aymen/Documents/urxvt.png">exec:urxvtc</TrayButton> -->
        <!-- <TrayButton icon="mutt.svg">exec:urxvtc -geometry 79x53+0+16 -e mutt</TrayButton> -->

        <Dock/>
         <!-- <Swallow name="conky" width="77"> -->
         <!--   conky -->
         <!-- </Swallow> -->
        <Spacer width="3"/>
        <Clock format="%a %d %b %H:%M "><Button mask="123">exec:xclock</Button></Clock>
        <Spacer width="3"/>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>monospace-9:bold</Font>
        <Width>2</Width>
        <Height>15</Height>
        <Corner>2</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="false" list="desktop">
        <Font>monospace-10</Font>
        <Background>#3D3D3D:#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <TaskListStyle>
      <Font>monospace-9.5</Font>
      <Active>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555:#5D5D5D</Background>
      </Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#3D3D3D:#333333</Background>
    </TaskListStyle>
    <PagerStyle>
        <Font>monospace-9</Font>
        <Outline>#000000</Outline>
        <Foreground>#888888</Foreground>
        <Background>#292929</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>monospace-10:bold</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <!-- <Outline>#000000</Outline> -->
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>0.85</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>monospace-9.5</Font>
        <Foreground>#000000</Foreground>
        <Background>#8D8D8D</Background>
    </PopupStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/apps/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/animations/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/categories/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/devices/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/emblems/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/emotes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/mimetypes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/mimetypes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/panel/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/places/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/24x24/status/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/apps/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/animations/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/categories/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/devices/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/emblems/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/emotes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/mimetypes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/mimetypes/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/panel/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/places/</IconPath>
    <IconPath>/home/aymen/Documents/icons/ePapirus/32x32/status/</IconPath>
    <IconPath>
        /usr/local/share/jwm
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="5" height="1">
        <Background  type="command">nitrogen --restore</Background>
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="7">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode mask="mod4" coordinates="window">opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode coordinates="window">opaque</ResizeMode>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="mod4+S" key="e">exec:i3lock -i /home/aymen/Pictures/Wallpapers/lock_win.png -t -p win -u -f</Key>

    <!-- navigation -->
    <Key mask="mod4" key="k">prev</Key>
    <Key mask="mod4" key="j">next</Key>

    <Key mask="mod1" key="r">resize</Key>
    <Key mask="mod1" key="m">move</Key>
    <Key mask="mod1" key="s">shade</Key>

    <Key mask="mod4" key="n">rdesktop</Key>
    <Key mask="mod4" key="p">ldesktop</Key>
    <Key mask="mod4+C" key="j">ddesktop</Key>
    <Key mask="mod4+C" key="k">udesktop</Key>
    <Key mask="mod1+S" key="n">sendr</Key>
    <Key mask="mod1+S" key="p">sendl</Key>
    <Key mask="mod1" key="j">sendd</Key>
    <Key mask="mod1" key="k">sendu</Key>

    <Key mask="mod4+S" key="v">maxv</Key>
    <Key mask="mod4+S" key="s">maxh</Key>
    <Key mask="mod1" key="Tab">nextstacked</Key>
    <Key mask="mod4" key="Tab">nextstacked</Key>
    <Key mask="mod1+S" key="Tab">prevstacked</Key>
    <Key mask="mod4+S" key="Tab">prevstacked</Key>

    <Key mask="mod4+S" key="q">close</Key>
    <Key mask="mod4+S" key="r">restart</Key>
    <Key mask="mod4" key="#">desktop#</Key>
    <Key mask="mod4" key="f">maximize</Key>
    <Key mask="mod4" key="m">minimize</Key>
    <Key mask="mod4+S" key="h">maxleft</Key>
    <Key mask="mod4+S" key="l">maxright</Key>
    <Key mask="mod4+S" key="k">maxtop</Key>
    <Key mask="mod4+S" key="j">maxbottom</Key>

    <!-- quick access to applications -->
    <!-- <Key mask="mod4" key="d">exec:rofi -show run -no-fixed-num-lines -width 37</Key> -->
    <Key mask="mod4" key="d">exec:~/.config/rofi/launchers-git/launcher.sh</Key>
    <!-- <Key mask="mod4" key="space">exec:rofi -show window -no-fixed-num-lines -width 30</Key> -->
    <Key mask="C" key="space">exec:~/.config/rofi/launchers-git/drun.sh</Key>
    <Key mask="mod4" key="space">exec:~/.config/rofi/launchers-git/window.sh</Key>
    <Key mask="mod1" key="space">exec:~/.config/rofi/launchers-git/window.sh</Key>
    <Key mask="mod4+S" key="f">exec:locate home | rofi -no-fixed-num-lines -theme ~/.config/rofi/launchers-git/kde_krunner.rasi -threads 0 -dmenu -i -p "locate" | xargs -r -0 xdg-open</Key>
    <Key mask="mod1+C" key="b">exec:~/.config/rofi/scripts/battery.sh</Key>
    <Key mask="mod1+C" key="s">exec:~/.config/rofi/scripts/backlight.sh</Key>
    <Key mask="mod1+C" key="q">exec:~/.config/rofi/scripts/quicklinks.sh</Key>
    <Key mask="mod1+C" key="Tab">exec:~/.config/rofi/scripts/menu_apps.sh</Key>
    <Key mask="mod1+S" key="q">exec:~/.config/rofi/scripts/powermenu.sh</Key>

    <Key mask="mod4" key="w">window</Key>
    <Key mask="mod4+C" key="d">showdesktop</Key>

    <!-- open applications -->
    <Key mask="mod4" key="Return">exec:urxvtc</Key>
    <Key mask="mod1" key="Return">exec:tilda</Key>
    <Key mask="mod4+C" key="p">exec:pcmanfm</Key>
    <Key mask="mod4+C" key="n">exec:urxvtc -geometry 110x30 -e mc</Key>
    <Key mask="mod4+C" key="f">exec:firefox</Key>
    <Key mask="mod1+C" key="f">exec:firefox --private-window</Key>
    <Key mask="mod4+C" key="z">exec:zathura</Key>
    <Key mask="mod4+C" key="v">exec:urxvtc -e vim</KEY>
    <Key mask="mod4+C" key="m">exec:urxvtc -geometry 79x53+0+16 -e mutt</KEY>
    <Key mask="mod4+C" key="s">exec:urxvtc -geometry 110x28+554+421 -e cmus</Key>
    <Key mask="mod4+C" key="r">exec:urxvtc -geometry 110x30 -e ranger</Key>
    <Key mask="mod4+C" key="t">exec:urxvtc -e htop</Key>
    <Key mask="mod4+C" key="c">exec:urxvtc -geometry 84x41 -e vim ~/.jwmrc </Key>
    <Key mask="mod4+S" key="Return">exec:urxvtc -geometry 96x53+666+15 -e tmux attach-session</Key>
    <Key mask="mod4+S" key="p">exec:scrot -e 'mv $f ~/Pictures/screenshots/' && notify-send "Screenshot taken"</Key>
    <Key mask="mod1+C+S" key="p">exec:scrot -s -e 'mv $f ~/Pictures/screenshots/'</Key>
    <Key mask="mod1+S" key="d">exec:pcmanfm --desktop --wallpaper-mode=~/Pictures/Wallpapers/IMG_4850.JPG</Key>
    <Key mask="mod1+C+S" key="d">exec:killall pcmanfm</Key>

    <Key mask="mod1+C" key="k">exec:~/Documents/scripts/keyboard.sh</Key>

    <!-- display and monitor setup -->
    <Key mask="mod1+S" key="e">xrandr --output eDP1 --mode 1440x900</Key>
    <Key mask="mod1+S" key="a">exec:xrandr --auto</Key>
    <Key mask="mod1+S" key="c">exec:xrandr --output HDMI2 --auto --right-of eDP1</Key>

    <!-- media keys -->
    <Key key="XF86MonBrightnessUp">exec:xbacklight -inc 10</Key>
    <Key key="XF86MonBrightnessDown">exec:xbacklight -dec 10</Key>
    <Key key="XF86AudioPlay">exec:playerctl play-pause</Key>
    <Key key="XF86AudioNext">exec:playerctl next</Key>
    <Key key="XF86AudioPrev">exec:playerctl previous</Key>
    <Key key="XF86AudioRaiseVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ +2%</Key>
    <Key key="XF86AudioLowerVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ -2%</Key>
    <Key key="XF86AudioMute">exec:pactl set-sink-mute @DEFAULT_SINK@ toggle</Key>
    <Key key="XF86AudioMicMute">exec:pactl set-source-mute @DEFAULT_SOURCE@ toggle</Key>

    <!-- cmus controls -->
    <Key key="F8">exec:cmus-remote --pause</Key>
    <Key key="F7">exec:cmus-remote --prev</Key>
    <Key key="F9">exec:cmus-remote --next</Key>
    <Key mask="mod1" key="F7">exec:cmus-remote --seek -5</Key>
    <Key mask="mod1" key="F9">exec:cmus-remote --seek +5</Key>

</JWM>

<?xml version="1.0"?>
<JWM>

<!-- startup -->
<StartupCommand> volumeicon &amp;</StartupCommand>
<StartupCommand> nm-applet &amp;</StartupCommand>
<StartupCommand> fdpowermon &amp;</StartupCommand>
<StartupCommand> xrandr --output eDP1 --auto --mode 1440x900 &amp;</StartupCommand>

    <!-- The root menu. -->
    <RootMenu onroot="12">
        <Dynamic icons="folder-blue.svg" label="Recently used"> exec:~/Documents/scripts/recent_files.sh </Dynamic> 
        <Separator/>
        <Include>$HOME/.jwmrc-mjwm</Include>
        <Program label="pcmanfm" icon="folder-green.svg"> pcmanfm </Program>
        <Program label="mc" icon="folder-green.svg"> urxvtc -e mc </Program>
        <Program icon="terminal.svg" label="Terminal">urxvtc</Program>
        <Program icon="firefox.png" label="Firefox">firefox</Program>
        <Program icon="opera.png" label="Opera">opera</Program>
        <Program icon="nm-device-wired-secure.png" label="Lock">
                i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png
        </Program>
        <Separator/>
        <Restart label="Restart" icon="/snap/gnome-3-28-1804/110/usr/share/icons/Adwaita/scalable/actions/application-exit-symbolic.svg"/>
        <!-- <Exit label="Logout" confirm="true" icon="/usr/share/refind/refind/icons/func_exit.png"/> -->
        <Exit label="Logout" confirm="true" icon="system-log-out.svg"/>
    </RootMenu>

    <RootMenu onroot="3">

        <Dynamic icons="folder-blue.svg" label="Recently used">exec:~/Documents/scripts/recent_files.sh</Dynamic> 
        <Separator/>
        <Program label="Terminal" icon="terminal.svg"> urxvtc || gnome-terminal</Program>
        <Program label="Files" icon="folder-green.svg"> pcmanfm </Program>

        <Separator/>

        <!-- autogenerated menu entries -->
        <Include>$HOME/.jwmrc</Include>

        <Separator/>

        <Program label="Lock" icon="system-lock-screen-symbolic.svg">
        xset s activate
        </Program>
        <Restart label="Restart" icon="/usr/share/refind/refind/icons/func_exit.png"/>
        <Exit label="Logout" confirm="true" icon="/usr/share/refind/refind/icons/func_exit.png"/>

    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Option>aerosnap</Option>
    </Group>
    <Group>
        <Class>URxvt</Class>
        <Option>iignore</Option>
    </Group>
    <Group>
        <Name>xterm</Name>
        <Option>iignore</Option>
    </Group>
    <!-- <Group> -->
    <!--     <Class>Firefox</Class> -->
    <!--     <Option>notitle</Option> -->
    <!-- </Group> -->
    <Group>
        <Name>xclock</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" height="23" autohide="off">
        <TrayButton icon="/usr/share/jwm/jwm-red.svg">root:1</TrayButton>
        <TrayButton label="_">showdesktop</TrayButton>

        <Pager labeled="false"/>

        <TaskList maxwidth="256"/>

        <Dock/>
         <!-- <Swallow name="conky" width="77"> -->
         <!--   conky -->
         <!-- </Swallow> -->
        <Spacer width="5"/>
        <Clock format="%a %d %b | %H:%M "><Button mask="123">exec:xclock</Button></Clock>
        <Spacer width="3"/>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Mono-9:bold</Font>
        <Width>1</Width>
        <Height>15</Height>
        <Corner>3</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="false" list="desktop">
        <Font>Mono-9.5</Font>
        <Background>#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <TaskListStyle>
      <Font>Mono-9.5</Font>
      <Active>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
      </Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#333333</Background>
    </TaskListStyle>
    <PagerStyle>
        <Font>Mono-9</Font>
        <Outline>#000000</Outline>
        <Foreground>#888888</Foreground>
        <Background>#AAAAAA</Background>
        <Text>#DDDDDD</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Mono-10:bold</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>0.9</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Mono-9.5</Font>
        <Foreground>#000000</Foreground>
        <Background>#8D8D8D</Background>
    </PopupStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>/usr/share/icons/hicolor/256x256/apps</IconPath>
    <IconPath>/usr/share/icons/hicolor/256x256/mimetypes</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/actions</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/apps</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/categories</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/devices</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/emblems</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/mimetypes</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/status</IconPath>
    <IconPath>/usr/share/icons/hicolor/512x512/apps</IconPath>
    <IconPath>/usr/share/icons/hicolor/512x512/mimetypes</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/actions</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/apps</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/categories</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/devices</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/emblems</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/mimetypes</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/places</IconPath>
    <IconPath>/usr/share/icons/hicolor/scalable/status</IconPath>
    <IconPath>/usr/share/icons</IconPath>
    <IconPath>/usr/share/pixmaps</IconPath>
    <IconPath>/usr/share/icons/HighContrast/16x16/apps/</IconPath>
    <IconPath>/usr/share/icons/HighContrast/22x22/apps/</IconPath>
    <IconPath>/usr/share/icons/HighContrast/24x24/apps/</IconPath>
    <IconPath>/usr/share/icons/HighContrast/32x32/apps/</IconPath>
    <IconPath>/usr/share/icons/HighContrast/48x48/actions</IconPath>
    <IconPath>/usr/share/icons/HighContrast/256x256/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/16x16/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/22x22/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/24x24/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/32x32/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/48x48/apps/</IconPath>
    <IconPath>/usr/share/icons/hicolor/256x256/apps/</IconPath>
    <IconPath>/home/aymen/Documents/icons/Papirus/64x64/apps/opera.svg</IconPath>
    <IconPath>/usr/share/icons/jwm</IconPath>
    <IconPath>/home/aymen/Downloads/Papirus-Dark/48x48/places/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/actions/32/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/applets/48/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/apps/64/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/categories/32/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/devices/64/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/emblems/16/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/emotes/22/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/places/64/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/preferences/32/</IconPath>
    <IconPath>/home/aymen/Documents/icons/blue-manjaro/status/64/</IconPath>
    <IconPath>
        /usr/local/share/jwm
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="6" height="1">
        <Background  type="command">nitrogen --restore</Background>
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="7">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode mask="mod4" coordinates="window">opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode coordinates="window">opaque</ResizeMode>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <!-- <Key mask="mod4+S" key="e">exec:i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png</Key> -->
    <Key mask="mod4+S" key="e">exec:i3lock -t -i /home/aymen/Pictures/Wallpapers/aspen.jpg</Key>

    <!-- navigation -->
    <Key mask="mod4" key="k">prev</Key>
    <Key mask="mod4" key="j">next</Key>

    <Key mask="mod1" key="r">resize</Key>
    <Key mask="mod1" key="m">move</Key>
    <Key mask="mod1" key="s">shade</Key>

    <Key mask="mod4" key="n">rdesktop</Key>
    <Key mask="mod4" key="p">ldesktop</Key>
    <Key mask="mod4+C" key="j">ddesktop</Key>
    <Key mask="mod4+C" key="k">udesktop</Key>
    <Key mask="mod1+S" key="n">sendr</Key>
    <Key mask="mod1+S" key="p">sendl</Key>
    <Key mask="mod1" key="j">sendd</Key>
    <Key mask="mod1" key="k">sendu</Key>

    <Key mask="mod4+S" key="v">maxv</Key>
    <Key mask="mod4+S" key="s">maxh</Key>

    <!-- <Key mask="mod4" key="Tab">nextstacked</Key> -->
    <!-- <Key mask="mod4+S" key="Tab">prevstacked</Key> -->
    <Key mask="mod4+S" key="q">close</Key>
    <Key mask="mod4+S" key="r">restart</Key>
    <Key mask="mod4" key="#">desktop#</Key>
    <Key mask="mod4" key="f">maximize</Key>
    <Key mask="mod4" key="m">minimize</Key>
    <Key mask="mod4+S" key="h">maxleft</Key>
    <Key mask="mod4+S" key="l">maxright</Key>
    <Key mask="mod4+S" key="k">maxtop</Key>
    <Key mask="mod4+S" key="j">maxbottom</Key>

    <!-- quick access to applications -->
    <Key mask="mod4" key="d">exec:rofi -show run</Key>
    <Key mask="mod4" key="Tab">exec:rofi -show window</Key>
    <Key mask="mod4+S" key="f">exec:locate home | rofi -threads 0 -dmenu -i -p "locate" | xargs -r -0 xdg-open</Key>
    <Key mask="mod1" key="d">root:1</Key>
    <Key mask="mod4" key="w">window</Key>
    <Key mask="mod4+C" key="d">showdesktop</Key>
    
    <!-- open applications -->
    <Key mask="mod4" key="Return">exec:urxvtc</Key>
    <Key mask="mod1" key="Return">exec:emacs</Key>
    <Key mask="mod4+C" key="p">exec:pcmanfm</Key>
    <Key mask="mod4+C" key="n">exec:urxvtc -e mc</Key>
    <Key mask="mod4+C" key="f">exec:firefox</Key>
    <Key mask="mod4+C" key="z">exec:zathura</Key>
    <Key mask="mod4+C" key="v">exec:urxvtc -e vim</KEY>
    <!-- <Key mask="mod4+C" key="m">exec:xterm -geometry 78x50+0+16 -e mutt</KEY> -->
    <Key mask="mod4+C" key="m">exec:urxvtc -geometry 78x45+0+16 -e mutt</KEY>
    <Key mask="mod4+C" key="s">exec:urxvtc -e cmus</Key>
    <Key mask="mod4+C" key="r">exec:urxvtc -e ranger</Key>
    <Key mask="mod4+C" key="t">exec:urxvtc -e htop</Key>
    <Key mask="mod4+C" key="c">exec:urxvtc -geometry 89x40 -e vim ~/.jwmrc </Key>
    <!-- <Key mask="mod4+S" key="Return">exec:xterm -geometry 96x50+683+35 -e tmux attach-session</Key> -->
    <Key mask="mod4+S" key="Return">exec:urxvtc -geometry 96x45+666+15 -e tmux attach-session</Key>
    <Key mask="mod4+S" key="p">exec:scrot -e 'mv $f ~/Documents/Screenshots/'</Key>
    <Key mask="mod1+C+S" key="p">exec:scrot -s -e 'mv $f ~/Documents/Screenshots/'</Key>
    <Key mask="mod1+C+S" key="d">exec:pcmanfm --desktop --profile linux</Key>
    <Key mask="mod1+C+S" key="d">exec:killall pcmanfm</Key>

    <Key mask="mod1+C" key="k">exec:/home/aymen/Documents/scripts/keyboard.sh</Key>

    <!-- display and monitor setup -->
    <Key mask="mod1+S" key="e">xrandr --output eDP1 --mode 1440x900</Key>
    <Key mask="mod1+S" key="a">exec:xrandr --auto</Key>
    <Key mask="mod1+S" key="c">exec:xrandr --output HDMI2 --auto --right-of eDP1 && feh --bg-fill /home/aymen/Pictures/Wallpapers/martin-miguel-tx3000-new-shot-4.jpg &</Key>

    <!-- media keys -->
    <Key key="XF86MonBrightnessUp">exec:xbacklight -inc 10</Key>
    <Key key="XF86MonBrightnessDown">exec:xbacklight -dec 10</Key>
    <Key key="XF86AudioPlay">exec:playerctl play-pause</Key>
    <Key key="XF86AudioNext">exec:playerctl next</Key>
    <Key key="XF86AudioPrev">exec:playerctl previous</Key>
    <Key key="XF86AudioRaiseVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ +2%</Key>
    <Key key="XF86AudioLowerVolume">exec:pactl set-sink-volume @DEFAULT_SINK@ -2%</Key>
    <Key key="XF86AudioMute">exec:pactl set-sink-mute @DEFAULT_SINK@ toggle</Key>
    <Key key="XF86AudioMicMute">exec:pactl set-source-mute @DEFAULT_SOURCE@ toggle</Key>

    <!-- cmus controls -->
    <Key key="F8">exec:cmus-remote --pause</Key>
    <Key key="F7">exec:cmus-remote --prev</Key>
    <Key key="F9">exec:cmus-remote --next</Key>
    <Key mask="mod1" key="F7">exec:cmus-remote --seek -5</Key>
    <Key mask="mod1" key="F9">exec:cmus-remote --seek +5</Key>

</JWM>

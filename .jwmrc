<?xml version="1.0"?>
<JWM>

<!-- startup -->
<StartupCommand> xrandr --output eDP-1 --mode 1440x900 &amp;</StartupCommand>
<StartupCommand> xset r rate 200 30 &amp;</StartupCommand>
<StartupCommand> setxkbmap -option 'caps:ctrl_modifier' &amp;</StartupCommand>
<StartupCommand> xcape -e 'Caps_Lock=Escape' &amp;</StartupCommand>
<StartupCommand> compton --backend glx --paint-on-overlay --vsync opengl-swc &amp;</StartupCommand>
<StartupCommand> conky &amp;</StartupCommand>
<StartupCommand> volumeicon &amp;</StartupCommand>
<StartupCommand> nm-applet &amp;</StartupCommand>
<!-- <StartupCommand> xrdb ~/.Xresources &amp;</StartupCommand> -->

<!-- TODO: clean up icons paths -->

    <!-- The root menu. -->
    <RootMenu onroot="12">
        <Include>$HOME/.jwmrc-mjwm</Include>
        <Program label="nautilus" icon="folder-green.svg"> nautilus </Program>
        <Program label="pcmanfm" icon="folder.svg"> pcmanfm </Program>
        <Program icon="terminal.svg" label="Terminal">urxvt</Program>
        <Program icon="/usr/share/icons/hicolor/48x48/apps/firefox.png" label="Firefox">firefox</Program>
        <Program icon="nm-device-wired-secure.png" label="Lock">
                i3lock -t -i /home/aymen/Pictures/Wallpapers/lock_win.png
        </Program>
        <Separator/>
        <Restart label="Restart" icon="/snap/gnome-3-28-1804/110/usr/share/icons/Adwaita/scalable/actions/application-exit-symbolic.svg"/>
        <!-- <Exit label="Logout" confirm="true" icon="/usr/share/refind/refind/icons/func_exit.png"/> -->
        <Exit label="Logout" confirm="true" icon="system-log-out.svg"/>
    </RootMenu>

    <RootMenu onroot="3">

        <Program label="Terminal" icon="terminal.svg"> urxvt || gnome-terminal</Program>
        <Program label="Files" icon="folder-green.svg"> pcmanfm </Program>

        <Separator/>

        <!-- autogenerated menu entries -->
        <Include>$HOME/.jwmrc</Include>

        <Separator/>

        <Program label="Lock" icon="system-lock-screen-symbolic.svg">
        xset s activate
        </Program>
        <Restart label="Restart" icon="/usr/share/refind/refind/icons/func_exit.png"/>
        <Exit label="Logout" confirm="true" icon="/usr/share/refind/refind/icons/func_exit.png"/>

    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Option>centered</Option>
    </Group>
    <Group>
        <Class>Firefox</Class>
        <Option>notitle</Option>
    </Group>
    <Group>
        <Name>xclock</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" height="26" autohide="off">

        <TrayButton icon="/usr/share/jwm/jwm-red.svg">root:1</TrayButton>
        <Spacer width="5"/>
        <TrayButton icon="folder-green.svg">exec:pcmanfm</TrayButton>
        <Spacer width="5"/>
        <TrayButton icon="firefox.svg">exec:firefox</TrayButton>
        <Spacer width="5"/>
        <TrayButton icon="terminal.svg">exec:urxvt</TrayButton>
        <Spacer width="5"/>
        <TrayButton label="_">showdesktop</TrayButton>
        <Spacer width="7"/>

        <Pager labeled="true"/>

        <TaskList maxwidth="256"/>

        <Dock/>
        <Spacer width="5"/>
        <Clock format="%a %b %d | %H:%M "><Button mask="123">exec:xclock</Button></Clock>
        <Spacer width="3"/>
        <!-- <TrayButton icon="/usr/share/refind/refind/icons/func_exit.png" popup="Exit">exec:jwm -exit</TrayButton> -->
        <Spacer width="3"/>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Sans-9:bold</Font>
        <Width>2</Width>
        <Height>21</Height>
        <Corner>3</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
            <Outline>#000000</Outline>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="true" list="all">
        <Font>Sans-9.5</Font>
        <Background>#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Outline>#111111</Outline>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <TaskListStyle decorations="motif">
    <!-- <TaskListStyle> -->
      <Font>Sans-10</Font>
      <Active>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Outline>#3D3D3D</Outline>
      </Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#333333</Background>
      <Outline>#111111</Outline>
    </TaskListStyle>
    <PagerStyle>
        <Foreground>#555555</Foreground>
        <Background>#333333</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Sans-9:bold</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <Outline>#000000</Outline>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>0.85</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Sans-9</Font>
        <Foreground>#000000</Foreground>
        <Background>#999999</Background>
    </PopupStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
